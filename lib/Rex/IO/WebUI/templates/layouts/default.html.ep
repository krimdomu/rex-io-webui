<!DOCTYPE html>
<html>
   <head>
      <meta http-equiv="content-type" content="text/html; charset=utf-8">
   
      <title>Rex.IO - WebUI</title>

      <script type="text/javascript" charset="utf-8" src="/js/jquery-1.8.2.min.js"></script>
      <script type="text/javascript" charset="utf-8" src="/js/jquery-ui-1.9.0.min.js"></script>
      <!-- <script type="text/javascript" charset="utf-8" src="/js/jquery.layout.min.js"></script> -->
      <script type="text/javascript" charset="utf-8" src="/js/raven-0.6.min.js"></script>

      <!-- <link rel="stylesheet" href="/css/layout-default.css" type="text/css" media="screen" charset="utf-8" /> -->
      <link rel="stylesheet" href="/css/smoothness/jquery-ui-1.9.0.custom.min.css" type="text/css" media="screen" charset="utf-8" />
      <link rel="stylesheet" href="/css/ui.css" type="text/css" media="screen" charset="utf-8" />
      <link rel="stylesheet" href="/css/jquery.selectBox.css" type="text/css" media="screen" charset="utf-8" />
      <link rel="stylesheet" href="/js/DataTables-1.9.4/media/css/jquery.dataTables.css" type="text/css" media="screen" charset="utf-8" />
      <link rel="stylesheet" href="/js/DataTables-1.9.4/media/css/jquery.dataTables_themeroller.css" type="text/css" media="screen" charset="utf-8" />
      <link rel="stylesheet" href="/css/form.css" type="text/css" media="screen" charset="utf-8" />
      
   </head>
   % my @server_plugins = @{ rexio->get_plugins };
   <body>

      <div class="page-container">

         <div class="page-sidebar dark-background">
            <div class="main-accordion">

               <div>
                  <div class="search_box">
                     <input type="text" id="server_search" name="server_search" value="" placeholder="Server Search..." />
                  </div>
               </div>

               <ul class="navul">
                  <li class="active">
                     <a href="/">Dashboard</a>
                  </li>
                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">Server</a>
                     <ul class="sub">
                        <li><a href="#" class="server-list-link">List Server</a></li>
                        <li><a href="#" class="server-add-link">Add new Server</a></li>
                        <li><a href="#" class="server-group">Groups</a></li>
                     </ul>
                  </li>

                  % if(@server_plugins ~~ m/^Monitor$/) {
                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">Monitoring</a>
                     <ul class="sub">
                        <li><a href="#" class="monitoring-incidents">Incidents</a></li>
                        <li><a href="#" class="monitoring-monitor-groups">Monitor Groups</a></li>
                        <li><a href="#" class="monitoring-monitors">Monitors</a></li>
                        <!-- <li><a href="#" class="monitoring-triggers">Triggers</a></li> -->
                        <!-- 
                              default trigger is template_item.failure
                              extend: add trigger to group
                              extend: add trigger to host (will overwrite group)
                        -->
                        <li><a href="#" class="monitoring-alerts">Alerts</a></li>
                     </ul>
                  </li>
                  % }


                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">Deploy Templates</a>
                     <ul class="sub">
                        <li><a href="#" class="template-link">List Templates</a></li>
                        <li><a href="#" class="new-template-link">New Template</a></li>
                     </ul>
                  </li>


                  % if(@server_plugins ~~ m/^Dns$/) {
                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">DNS</a>
                     <ul class="sub">
                        % my $tlds = rexio->get_dns_tlds;
                        % for my $tld (@{ $tlds }) {
                        <li><a href="#" class="dns-link" tld="<%= $tld %>"><%= $tld %></a></li>
                        % }
                     </ul>
                  </li>
                  % }

                  % if(@server_plugins ~~ m/^Dhcp$/) {
                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">DHCP</a>
                     <ul class="sub">
                        <li><a href="#" class="dhcp-link">List Leases</a></li>
                     </ul>
                  </li>
                  % }


                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">Datacenter</a>
                     <ul class="sub">
                        <li><a href="#" class="users-users">List DCs</a></li>
                        <li><a href="#" class="users-groups">Add DC</a></li>
                     </ul>
                  </li>

                  <li class="has-sub">
                     <a href="#" class="icon-arrow-left">Users &amp; Groups</a>
                     <ul class="sub">
                        <li><a href="#" class="users-users">Users</a></li>
                        <li><a href="#" class="users-groups">Groups</a></li>
                     </ul>
                  </li>

               </ul>

            </div>

         </div> <!-- page_sidebar -->

         <div id="content_area" class="page-content light-background">

            <div class="page-content-container">
               Dashboard...
            </div>
         </div> <!-- content_area -->

      </div> <!-- page container -->

      <div id="message_area" class="message_area_down">
         <a href="#" id="link_message_area_close" class="link_message_area_close"></a>
         <div class="message_area_content">
            <ul id="message_list" class="message_list">
            </ul>
         </div>
      </div>

   </body>
   <script type="text/javascript" charset="utf-8">
      /*$(document).ready(function() {
         $("body").layout({
         });
      });*/
   </script>
   <script type="text/javascript" charset="utf-8" src="/js/base.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/search.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/server.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/dns.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/dhcp.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/user.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/deploy/template.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/jquery.selectBox.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/json2.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/debug.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/DataTables-1.9.4/media/js/jquery.dataTables.min.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/jquery.jeditable.mini.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/smoothie.js"></script>
   <script type="text/javascript" charset="utf-8" src="/js/calculator.js"></script>
</html>
